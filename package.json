  "dependencies": {
    "@nestjs/common": "^6.2.4",
    "@nestjs/core": "^6.2.4",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-fastify": "^6.2.4",
    "@nestjs/typeorm": "^6.1.1",
    "axios": "^0.19.0",
    "dotenv": "^6.2.0",
